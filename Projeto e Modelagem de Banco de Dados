CREATE TABLE Ala 
( 
  Tipo VARCHAR(10),  
  Nome VARCHAR(50)
);

CREATE TABLE Pessoa 
( 
  Nome VARCHAR(50),  
  Telefone INT,  
  Genero VARCHAR(10),  
  Data_Nascimento DATE,  
  CPF INT PRIMARY KEY,  
  Endereco VARCHAR(100)
);

CREATE TABLE Paciente 
( 
  ID INT PRIMARY KEY,  
  Numero_Carteirinha_SUS INT
);

CREATE TABLE Funcionario 
( 
  Data_Contratacao DATE
);

CREATE TABLE Medico 
( 
  Especialidade VARCHAR(50),  
  CRM INT PRIMARY KEY
);

CREATE TABLE Enfermeiro 
( 
);

CREATE TABLE Tecnico 
( 
  Funcao VARCHAR(15)
);

CREATE TABLE Consulta 
( 
  Tipo_Diagnostico VARCHAR(50),  
  Descricao_Diagnostico VARCHAR(255),  
  Data_Atendimento DATE,  
  Horario_Atendimento TIME,  
  Sala INT
);

CREATE TABLE Exame 
( 
  Tipo_Resultado VARCHAR(50),  
  Tipo_Exame VARCHAR(50),  
  Descricao_Diagnostico VARCHAR(255),  
  Data_Atendimento DATE,  
  Descritivo_Resultado VARCHAR(255),  
  Resultado VARCHAR(50),  
  Horario_Atendimento TIME
);

CREATE TABLE Laboratorio 
( 
  Nome VARCHAR(50),  
  Telefone INT,  
  Endereco VARCHAR(100),  
  Exames_Cobertos VARCHAR(255),  
  Data_Expiracao_Contrato DATE,  
  Valor_Cobrado FLOAT
);

CREATE TABLE Internacao 
( 
  Motivo VARCHAR(255),  
  Resultado_Exame VARCHAR(255),  
  Sala INT,  
  Solicitacao BOOLEAN
);

CREATE TABLE Cirurgia 
( 
  Sala INT,  
  Especialidade VARCHAR(50),  
  Andar INT
);

CREATE TABLE Leito 
( 
  Andar INT,  
  ID_Leito INT PRIMARY KEY,  
  Sala INT
);

CREATE TABLE Hospital 
( 
);

CREATE TABLE Primeira_Consulta 
( 
);

CREATE TABLE Retorno 
( 
);
